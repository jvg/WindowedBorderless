<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="WindowedBorderless.App"
             RequestedThemeVariant="Default">

  <Application.Styles>
    <FluentTheme />

    <!-- Card panel style -->
    <Style Selector="Border.card">
      <Setter Property="CornerRadius" Value="8" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="ClipToBounds" Value="True" />
      <Setter Property="BorderBrush" Value="{DynamicResource CardBorderBrush}" />
      <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}" />
    </Style>

    <!-- ListBox inside cards: no chrome, transparent background -->
    <Style Selector="Border.card ListBox">
      <Setter Property="Background" Value="Transparent" />
      <Setter Property="BorderThickness" Value="0" />
      <Setter Property="Padding" Value="4" />
    </Style>

    <!-- ListBox items: more padding, rounded selection -->
    <Style Selector="Border.card ListBoxItem">
      <Setter Property="Padding" Value="10,8" />
      <Setter Property="CornerRadius" Value="6" />
      <Setter Property="Margin" Value="2,1" />
    </Style>

    <!-- Shuttle (arrow) buttons -->
    <Style Selector="Button.shuttle">
      <Setter Property="Width" Value="40" />
      <Setter Property="Height" Value="40" />
      <Setter Property="CornerRadius" Value="20" />
      <Setter Property="Padding" Value="0" />
      <Setter Property="HorizontalContentAlignment" Value="Center" />
      <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <!-- Footer bar -->
    <Style Selector="Border.toolbar">
      <Setter Property="CornerRadius" Value="8" />
      <Setter Property="Padding" Value="12,8" />
      <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}" />
      <Setter Property="BorderBrush" Value="{DynamicResource CardBorderBrush}" />
      <Setter Property="BorderThickness" Value="1" />
    </Style>

    <!-- Subtle label text -->
    <Style Selector="TextBlock.subtle">
      <Setter Property="Foreground" Value="{DynamicResource SubtleTextBrush}" />
    </Style>
  </Application.Styles>

  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Dark">
          <SolidColorBrush x:Key="CardBackgroundBrush" Color="#2D2D2D" />
          <SolidColorBrush x:Key="CardBorderBrush" Color="#404040" />
          <SolidColorBrush x:Key="CardHeaderBrush" Color="#252525" />
          <SolidColorBrush x:Key="SubtleTextBrush" Color="#99FFFFFF" />
        </ResourceDictionary>
        <ResourceDictionary x:Key="Light">
          <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFF" />
          <SolidColorBrush x:Key="CardBorderBrush" Color="#E5E5E5" />
          <SolidColorBrush x:Key="CardHeaderBrush" Color="#F5F5F5" />
          <SolidColorBrush x:Key="SubtleTextBrush" Color="#99000000" />
        </ResourceDictionary>
      </ResourceDictionary.ThemeDictionaries>
    </ResourceDictionary>
  </Application.Resources>

</Application>